<!DOCTYPE html>
<html>
 
 <head>
  <title><%=title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <!-- allows the "delete" links on the user display page to work, 
  by including the default Rails JavaScript libraries -->
</head>
 
 <body>
  <div class="container">
  <%= render 'layouts/header' %>
   <section class="round">
   <% flash.each do |key, value| %>
     <div class="flash <%= key %>"><%= value %></div>
   <% end %>
   <%= yield %>
   </section>
   <%= render 'layouts/footer' %>   
   <%= debug(params) if Rails.env.development? %>
  </div>
 </body>
 </html>
